    "version": "0.2.0",
    "configurations": [
        {
            "name": "Compile and launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/main_debug.exe",
            "args": ["./usefulres/testfiles/ITEMMODEL.AFS", "./usefulres/testfiles"], 
            "MIMode": "gdb",
            "miDebuggerPath": "E:\\DevTools\\TDM-GCC-64\\bin\\gdb.exe",
            "cwd": "${workspaceFolder}",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make: debug"
        },

        {
            "name": "Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/main_debug.exe",
            "args": ["./usefulres/testfiles/ITEMMODEL.AFS", "b"],
            "MIMode": "gdb",
            "miDebuggerPath": "",
            "cwd": "${workspaceFolder}",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
        }    
    ]
}